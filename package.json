{
  "name": "vactit-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "src/apps/*",
    "src/packages/*",
    "src/services/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=src/apps/web",
    "dev:api": "npm run dev --workspace=src/services/api",
    "dev:worker": "npm run dev --workspace=src/services/worker",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "docker:up": "cd src/infra/docker && docker-compose up -d",
    "docker:down": "cd src/infra/docker && docker-compose down",
    "prisma:generate": "cd src/prisma && npx prisma generate",
    "prisma:migrate": "cd src/prisma && npx prisma migrate dev"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.0",
    "@prisma/client": "^6.18.0",
    "@tailwindcss/postcss": "^4.1.16",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ioredis": "^5.8.2",
    "next": "^16.0.0",
    "next-auth": "^5.0.0-beta.29",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "prisma": "^6.18.0",
    "typescript": "^5.9.3"
  }
}
