# Web App Dockerfile
FROM node:20-alpine AS base

# Install dependencies only when needed
FROM base AS deps
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY src/apps/web/package*.json ./src/apps/web/
COPY src/packages/ui/package*.json ./src/packages/ui/
COPY src/packages/config/package*.json ./src/packages/config/
COPY src/packages/types/package*.json ./src/packages/types/

RUN npm install --legacy-peer-deps

# Build the application
FROM base AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

WORKDIR /app/src/apps/web
RUN npm run build

# Production image
FROM base AS runner
WORKDIR /app

ENV NODE_ENV production

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

COPY --from=builder /app/src/apps/web/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/src/apps/web/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/src/apps/web/.next/static ./.next/static

USER nextjs

EXPOSE 3000

ENV PORT 3000

CMD ["node", "server.js"]
